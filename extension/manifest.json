{
  "manifest_version": 2,
  "name": "FoxMCP Extension",
  "version": "1.0.0",
  "description": "Browser extension that exposes data and functions to MCP clients via WebSocket",
  "permissions": [
    "tabs",
    "history", 
    "bookmarks",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "FoxMCP Extension"
  }
}